<div class="top-navigation-bar">
  <h2 class="entity-title">Exportación de clientes</h2>
</div>

<div class="admin_content_wrapper" style="background-color: #f5f5f5; margin: 0">
  <br>
  <%= partial :flash_messages_admin %>
  <!-- Customers export -->
  <div class="row">
    <div class="col-sm-12 col-md-10 col-md-offset-1">
      <div class="block block-content-full">
        <div class="block-header bg-gray-lighter">
          <h3 class="block-title">Exportación de clientes de las reservas</h3>
        </div>
        <div class="block-content block-content-narrow">
          <form name="customers_export_form" id="customers_export_form"
                action="/admin/booking/export/customers"
                method="POST" class="form-horizontal" enctype="multipart/form-data">

            <input type="hidden" name="from" id="from"/>
            <input type="hidden" name="to" id="to"/>

            <div class="form-group">
                <label class="col-lg-12">Fecha inicio reserva desde</label>
                <div class="col-lg-10">
                  <input type="text" name="date_from" id="date_from" class="form-control" maxlength="10" autocomplete="off"/>
                </div>
            </div>  

            <div class="form-group">
                <label class="col-lg-12">Fecha inicio reserva hasta</label>
                <div class="col-lg-10">
                  <input type="text" name="date_to" id="date_to" class="form-control" maxlength="10" autocomplete="off"/>
                </div>
            </div>  

            <% if @addon_sales_channels %>
            <div class="form-group">
                <label class="col-lg-12">Canal de venta</label>
                <div class="col-lg-10">
                  <select name="sales_channel" class="form-control">
                    <option value="all">Todos</option>
                    <option value="">Por defecto</option>
                    <% @sales_channels.each do |sales_channel| %>
                       <option value="<%=sales_channel.code%>"><%=sales_channel.name%></option>
                    <% end %>
                  </select>
                </div>
            </div>                
            <% end %>
            <div class="form-group">
              <div class="col-md-9">
                <input id="export_customers" type="button" class="btn btn-sm btn-primary" value="Exportar"/>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>